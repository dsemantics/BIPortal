<body>
    @using (Html.BeginForm())
    {
        <!-- R&R Panel (Dynamic Panel) -->
        <div id="u399" class="ax_default table-wrapper-scroll-y my-custom-scrollbar" data-label="R&amp;R Panel">


            <!-- Unnamed (Table) -->
            <div id="u400" class="ax_default">
                @if (Model != null && Model.Count() > 0)
                {
                    <table class="table table-bordered table-striped mb-0 table-hover">
                        <tr>
                            <th style="display:none;">
                                @*@Html.DisplayNameFor(model => model.Name)*@
                                RoleID
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Name)*@
                                Role Name
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Id)*@
                                Date Created
                            </th>
                            <th>
                                Date Modified
                            </th>
                            <th>
                                View Rights
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="display:none;">
                                    <input type="text" value="@item.RoleID" name="RoleID" />
                                </td>
                                <td style="display:none;">
                                    <input type="text" value="@item.RoleName" name="RoleName" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoleName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                                </td>
                                <td>
                                    <input id="btnViewRights" value="View Rights" type="button" class="btnViewRights" style="width:75px" />
                                </td>
                            </tr>

                        }
                    </table>
                }
                else
                {
                    <div>Roles not yet defined in the system!</div>
                }
            </div>


        </div>


        <!-- RolesEditPanel (Dynamic Panel) -->
        <div id="u425" class="ax_default" data-label="RolesEditPanel" style="display:none">
            <div id="u425_state0" class="panel_state" data-label="State1" style="">
