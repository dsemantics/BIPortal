@{
    //Layout = null;
    Layout = "~/Views/Shared/_BIPortalLayout.cshtml";
    ViewBag.Title = "View Roles";
}
@model IEnumerable<BIPortal.Models.RolesModel>
<!DOCTYPE html>

<html>
<head>
    <title>Administartion</title>
    <link href="~/Styles/Roles_Rights/Roles_Rights.css" type="text/css" rel="stylesheet" />
    @*<link href="~/Styles/Common/bootstrap.min.css" type="text/css" rel="stylesheet" />*@
    <script language="JavaScript" type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script language="JavaScript" type="text/javascript" src="~/Scripts/RolesRights/ViewRole.js"></script>
    <script type="text/javascript">
        var geRightsurl = '@Url.Action("GetRights", "RolesRights")';                
    </script>
</head>
<body>

    <!-- R&R Panel (Dynamic Panel) -->
    <div id="u399" class="ax_default table-wrapper-scroll-y my-custom-scrollbar" data-label="R&amp;R Panel">


        <!-- Unnamed (Table) -->
        <div id="u400" class="ax_default">
            @if (Model != null && Model.Count() > 0)
            {
                <table class="table table-bordered table-striped mb-0 table-hover">
                    <tr>
                        <th style="display:none;">
                            @*@Html.DisplayNameFor(model => model.Name)*@
                            RoleID
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Name)*@
                            Role Name
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Id)*@
                            Date Created
                        </th>
                        <th>
                            Date Modified
                        </th>
                        <th>
                            View Rights
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="display:none;">
                                <input type="text" value="@item.RoleID" name="RoleID" />
                            </td>
                            <td style="display:none;">
                                <input type="text" value="@item.RoleName" name="RoleName" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModifiedDate)
                            </td>
                            <td>
                                <input id="btnViewRights" value="View Rights" type="button" class="btnViewRights" style="width:75px" />
                            </td>
                        </tr>

                    }
                </table>
            }
            else
            {
                <div>Roles not yet defined in the system!</div>
            }
        </div>


    </div>
    <!-- AddRoleButton (Shape) -->
    <div id="u475" class="ax_default button" data-label="AddRoleButton">
        @*<img id="u475_img" class="img " src="~/Images/roles_rights/addrolebutton_u475.svg" />*@
        <div id="u475_text" class="text ">
            <input id="btnAddRole" value="Add Role" type="button" style="width:175px" onclick="location.href='@Url.Action("AddRole", "RolesRights")'" />
        </div>
    </div>

    <div id="u4750" class="ax_default" data-label="AddRoleButton">
        @*<img id="u475_img" class="img " src="~/Images/roles_rights/addrolebutton_u475.svg" />*@
        <div id="u475_text" class="text ">
            <div id="u427_div" style="display:none"><label id="lblRoleName" style="color:black" /></div>

        </div>
    </div>
    <div id="UpdatePanel">

    </div>

</body>
</html>
