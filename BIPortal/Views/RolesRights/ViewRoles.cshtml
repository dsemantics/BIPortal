@{
    //Layout = null;
    Layout = "~/Views/Shared/_BIPortalLayout.cshtml";
    ViewBag.Title = "View Roles";
}
@model IEnumerable<BIPortal.Models.RolesModel>
<!DOCTYPE html>

<html>
<head>
    <title>Administartion</title>
    <link href="~/Styles/Common/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link href="~/Styles/Roles_Rights/Roles_Rights.css" type="text/css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/jstree.min.js"></script>

    @*<script language="JavaScript" type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>*@
    <script language="JavaScript" type="text/javascript" src="~/Scripts/RolesRights/ViewRole.js"></script>
    <script type="text/javascript">
        var geRightsurl = '@Url.Action("GetRights", "RolesRights")';
        var updateRolesandRightsurl = '@Url.Action("UpdateRoleAndRights", "RolesRights")';
        var selectedItems = [];        
    </script>
</head>
<body>
    @using (Html.BeginForm())
    {
        <!-- R&R Panel (Dynamic Panel) -->
        <div id="u399" class="ax_default table-wrapper-scroll-y my-custom-scrollbar" data-label="R&amp;R Panel">

            <!-- Unnamed (Table) -->
            <div id="u400" class="ax_default">
                @if (Model != null && Model.Count() > 0)
                {

                    <table id="tblViewRoles" class="table table table-bordered table-striped mb-0 table-hover">

                        <thead>
                            <tr>
                                <th style="display:none;">
                                    @*@Html.DisplayNameFor(model => model.Name)*@
                                    RoleID
                                </th>
                                <th style="text-align:left;">
                                    @*@Html.DisplayNameFor(model => model.Name)*@
                                    Role Name
                                </th>
                                <th style="text-align:left;">
                                    @*@Html.DisplayNameFor(model => model.Id)*@
                                    Date Created
                                </th>
                                <th style="text-align:left;">
                                    Date Modified
                                </th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td style="display:none;">
                                        <input type="text" value="@item.RoleID" name="RoleID" />
                                    </td>
                                    <td style="display:none;">
                                        <input type="text" value="@item.RoleName" name="RoleName" />
                                    </td>
                                    <td style="text-align:left;">
                                        <button type="button" class="btn btn-link btnViewRights">@item.RoleName</button>
                                    </td>
                                    <td style="text-align:left;">
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td style="text-align:left;">
                                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                }
                else
                {
                    < div > Roles not yet defined in the system!</ div >
                }
            </div>


        </div>


        <!-- RolesEditPanel (Dynamic Panel) -->
        <div id="u425" class="ax_default" data-label="RolesEditPanel" style="display:none">
            <div id="u425_state0" class="panel_state" data-label="State1" style="">
                <div id="u425_state0_content" class="panel_state_content">

                    <!-- Unnamed (Rectangle) -->
                    <div id="u426" class="ax_default box_1">
                        <div id="u426_div" class=""></div>
                        <div id="u426_text" class="text " style="display:none; visibility: hidden">
                            <p></p>
                        </div>
                    </div>

                    <!-- Unnamed (Rectangle) -->
                    <div id="u427" class="ax_default box_1">
                        <div id="u427_div" class=""></div>
                        <div id="u427_text" class="text ">
                            @*<p><span>FINSUPER</span></p>*@
                            <label id="lblRoleName" style="color:black" />
                        </div>
                    </div>

                    <!-- PurchaseWsPanel (Dynamic Panel) -->
                    <div id="u452" class="ax_default" data-label="PurchaseWsPanel" style="display:none">


                    </div>

                    <!-- Save (Rectangle) -->
                    <div id="u474" class="ax_default button " data-label="Save">
                        <div id="u474_div" class=""></div>
                        <div id="u474_text" class="text ">
                            @*<p><span>Save</span></p>*@
                            <input type="hidden" name="selectedItems" id="selectedItems" />
                            <input id="btnSaveRoleRights" value="Save" type="button" class="btnSaveRoleRights" style="width:88px" />
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Welcome In (Rectangle) -->
        <div class="ax_default label" id="u123" data-label="Welcome In" style="visibility:hidden;">
            <div id="u123_div"></div>
            <div class="text " id="u123_text">
                <p><span>ADMINISTRATION - Roles &amp; Rights</span></p>
            </div>
        </div>

        <!-- Welcome out (Rectangle) -->
        <div id="u654" class="ax_default label" data-label="Welcome out">
            <div id="u654_div" class=""></div>
            <div id="u654_text" class="text ">
                <p><span>ADMINISTRATION - Roles &amp; Rights</span></p>
            </div>
        </div>


        <!-- AddRoleButton (Shape) -->
        <div id="u475" class="ax_default button" data-label="AddRoleButton">
            <div id="u475_text" class="text ">
                <input id="btnAddRole" value="Add Role" type="button" style="width:175px" onclick="location.href='@Url.Action("AddRole", "RolesRights")'" />
            </div>
        </div>

    }

</body>
</html>
