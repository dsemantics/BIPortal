                        </div>
                    </div>

                    <!-- PurchaseWsPanel (Dynamic Panel) -->
                    <div id="u452" class="ax_default" data-label="PurchaseWsPanel" style="display:none">


                    </div>

                    <!-- Save (Rectangle) -->
                    <div id="u474" class="ax_default button " data-label="Save">
                        <div id="u474_div" class=""></div>
                        <div id="u474_text" class="text ">
                            @*<p><span>Save</span></p>*@
                            <input id="btnSaveRoleRights" value="Edit" type="button" class="btnSaveRoleRights" style="width:85px" />
                        </div>
                    </div>

                </div>
